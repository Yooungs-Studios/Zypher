<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/asdf/banner/sliderbar.css">
</head>
<body>
    <aside class="sidebar">
        <nav>
            <ul>
                <li id="home-btn">Home</li>
                <li id="trending-btn">Trending</li>
                <li id="subscriptions-btn">Subscriptions</li>
                <ul id="submenu-subscriptions" class="submenu">                
                    <% if (userid == null) { %>
                      <li>Login</li>
                     <% } else { %>
                      <% if (userSubscriptions) { %>
                        <li>No sigues a nadien</li>
                        <% } else { %>
                          <% userSubscriptions.forEach(subs => { %>
                            <li><%= subs.nickname %></li>
                            <% }) %>
                          <% } %>
                           <% } %>
                </ul>
                <li id="liked-videos-btn">Liked Videos</li>
                <li id="watch-later-btn">Watch Later</li>
            </ul>
        </nav>
    </aside>

    <div id="notification-container" style="position: fixed; top: 20px; right: 20px;"></div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
